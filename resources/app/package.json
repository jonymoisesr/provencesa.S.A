{
  "name": "tauri-app",
  "private": true,
  "version": "0.1.0",
  "description": "Invoice System for Provencesa",
  "author": "Provencesa",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on tcp:1422 && electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:pack": "npm run build && electron-packager . --overwrite --platform=win32 --arch=x64 --out=dist_electron --prune=true"
  },
  "build": {
    "appId": "com.provencesa.invoiceapp",
    "productName": "ProvencesaInvoiceSystem",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    }
  },
  "dependencies": {
    "firebase": "^12.9.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tauri-apps/api": "^2.10.1",
    "@tauri-apps/cli": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-shell": "^2.3.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.24",
    "clsx": "^2.1.1",
    "concurrently": "^9.2.1",
    "date-fns": "^4.1.0",
    "electron": "^40.4.1",
    "electron-builder": "^26.7.0",
    "electron-packager": "^17.1.2",
    "lucide-react": "^0.574.0",
    "postcss": "^8.5.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.71.1",
    "react-router-dom": "^7.13.0",
    "tailwind-merge": "^3.4.1",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.3",
    "uuid": "^13.0.0",
    "vite": "^7.0.4",
    "wait-on": "^9.0.4",
    "zustand": "^5.0.11"
  }
}
